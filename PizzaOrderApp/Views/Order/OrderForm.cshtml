@model List<PizzaOrderApp.Models.Product>

<h2>Форма замовлення</h2>
<form asp-action="ConfirmOrder" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label>@Model[i].Name - @Model[i].Price грн</label>
            <input type="number" name="quantities[@i]" min="0" value="0" />
        </div>
    }
    <button type="submit">Підтвердити замовлення</button>
</form>
